{
  "name": "liberchat",
  "version": "1.0.0",
  "description": "Liberchat Desktop App",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.liberchat.desktop",
    "productName": "Liberchat",
    "win": {
      "target": "nsis",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": true,
      "createDesktopShortcut": true
    }
  },
  "devDependencies": {
    "electron": "^22.3.27",
    "electron-builder": "^23.6.0"
  }
}
