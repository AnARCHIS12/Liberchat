{
  "name": "liberchat",
  "version": "1.0.0",
  "description": "Liberchat Desktop App",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.liberchat.desktop",
    "productName": "Liberchat",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "../android/app/src/main/res/drawable/ic_launcher_anarchist.xml",
      "signingHashAlgorithms": ["sha256"],
      "certificateFile": "cert.pfx",
      "certificatePassword": "${{ secrets.WINDOWS_PFX_PASSWORD }}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Liberchat",
      "uninstallDisplayName": "Liberchat"
    }
  },
  "devDependencies": {
    "electron": "^22.3.27",
    "electron-builder": "^23.6.0"
  }
}
